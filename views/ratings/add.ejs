<form action="/ratings" method="POST" class="form-horizontal">
        <fieldset>
            <legend><h3>Add Coffee Shop Rating</h3></legend>
            <div class="form-group">
                <div class="col-lg-10">
                    <label for="title" class="col-lg-2 control-label">Coffee shop</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="coffee_shop" name="coffee_shop">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10">
                    <label for="title" class="col-lg-2 control-label">Overall</label>
                    <div class="col-lg-10">
                        <input type="number" class="form-control" id="overall" name="overall" min="1" max="5">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10">
                    <label for="title" class="col-lg-2 control-label">Atmosphere</label>
                    <div class="col-lg-10">
                        <input type="number" class="form-control" id="atmosphere" name="atmosphere" min="1" max="5">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10">
                    <label for="title" class="col-lg-2 control-label">Coffee Quality</label>
                    <div class="col-lg-10">
                        <input type="number" class="form-control" id="coffee_quality" name="coffee_quality" min="1" max="5">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10">
                    <label for="title" class="col-lg-2 control-label">Dairy Free Options</label>
                    <div class="col-lg-10">
                        <input type="number" class="form-control" id="dairy_free" name="dairy_free" min="1" max="5">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Favourite Drink</label>
                <div class="col-lg-10">
                    <div class="radio">
                        <label>
                            <input type="radio" name="favourite_drink" id="favourite_drink" value="Espresso">
                            Espresso
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="favourite_drink" id="favourite_drink" value="Americano">
                            Americano
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="favourite_drink" id="favourite_drink" value="Latte">
                            Latte
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="favourite_drink" id="favourite_drink" value="Cappucino">
                            Cappucino
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="favourite_drink" id="favourite_drink" value="Mocha">
                            Mocha
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="favourite_drink" id="favourite_drink" value="Iced">
                            Iced Coffee
                        </label>
                    </div>
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <input type="submit" value="Save" class="btn">
                    <a href="/home" class="btn orange">Cancel</a>
                </div>
            </div>
        </fieldset>
</form>