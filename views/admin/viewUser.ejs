<link rel="stylesheet" href="../../css/bootstrap.css">
<link rel="stylesheet" href="../../css/styles.css">

<h1 class="mt-4">Admin: User Page</h1>

<div>
    <p> User ID: <%=userInfo.id %> </p>
    <p> Name: <%=userInfo.name %> </p>
    <p> Email: <%=userInfo.email %> </p>
</div>

<div class="panel panel-default">
    <% if(userRatings == 0) { %>
        <p> User has not created any ratings </p>
      <% } else { %>
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>Coffee Shop</th>
                <th>Overall Rating</th>
                <th>Atmosphere</th>
                <th>Coffee Quality</th>
                <th>Dairy Free Options</th>
                <th>Favourite Drink</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                <% if(userRatings) { %>
                    <% userRatings.forEach(function(userRatings) { %>
                        <tr>
                            <td><%= userRatings.coffee_shop %></td>
                            <td><%= userRatings.overall %></td>
                            <td><%= userRatings.atmosphere %></td>
                            <td><%= userRatings.coffee_quality %></td>
                            <td><%= userRatings.dairy_free %></td>
                            <td><%= userRatings.favourite_drink %></td>
                        </tr>
                    <% }); %>
                <% } %>
            </tbody>
        </table>
      <% } %>
</div>