<link rel="stylesheet" href="../../css/all.min.css">
<link rel="stylesheet" href="../../css/bootstrap.css">
<link rel="stylesheet" href="../../css/styles.css">

<form action="/ratings/<%=ratings.id%>" method="POST" class="form-horizontal">
    <input type="hidden" name="_method" value="PUT">
    <fieldset>
        <legend><h2>Edit Coffee Shop Rating</h2></legend>
        <div class="form-group">
            <div class="col-lg-12">
                <label for="title" class="col-lg-3 control-label">Coffee shop</label>
                <div class="col-lg-7">
                    <input type="text" class="form-control" id="coffee_shop" name="coffee_shop" value="<%=ratings.coffee_shop%>">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <label for="title" class="col-lg-3 control-label">Overall</label>
                <div class="col-lg-7">
                    <input type="number" class="form-control" id="overall" name="overall" min="1" max="5" value="<%=ratings.overall%>">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <label for="title" class="col-lg-3 control-label">Atmosphere</label>
                <div class="col-lg-7">
                    <input type="number" class="form-control" id="atmosphere" name="atmosphere" min="1" max="5" value="<%=ratings.atmosphere%>">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <label for="title" class="col-lg-3 control-label">Coffee Quality</label>
                <div class="col-lg-7">
                    <input type="number" class="form-control" id="coffee_quality" name="coffee_quality" min="1" max="5" value="<%=ratings.coffee_quality%>">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <label for="title" class="col-lg-3 control-label">Dairy Free Options</label>
                <div class="col-lg-7">
                    <input type="number" class="form-control" id="dairy_free" name="dairy_free" min="1" max="5" value="<%=ratings.dairy_free%>">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <label class="col-lg-3 control-label">Favourite Drink</label>
                <div class="col-lg-5" id="drink-options">
                    <div class="radio">
                        <label>
                            <input type="radio" name="favourite_drink" id="favourite_drink" value="Espresso">
                            Espresso
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="favourite_drink" id="favourite_drink" value="Americano">
                            Americano
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="favourite_drink" id="favourite_drink" value="Latte">
                            Latte
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="favourite_drink" id="favourite_drink" value="Cappucino">
                            Cappucino
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="favourite_drink" id="favourite_drink" value="Mocha">
                            Mocha
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="favourite_drink" id="favourite_drink" value="Iced">
                            Iced Coffee
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-3" id="add-submit">
                <input type="submit" value="Save" class="btn btn-primary">
                <a href="/home" class="btn orange">Cancel</a>
            </div>
        </div>
    </fieldset>
</form>


