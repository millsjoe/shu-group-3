
<div class="container">
  <h1 class="mt-4">Profile</h1>
  <p class="lead mb-3">Welcome <%= name %></p>
  <% if(email === 'admin@admin.com') { %>
    <a href="/admin" class="btn btn-primary">Admin Page</a>
  <% } %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  
  <div class="profilecard">
      <img src="../Images/profileimage.png" alt="add image" style="width:100%">
      <h1><%= name %></h1>
      <p class="profiletitle">Favourite Drink:</p>
      <p>Location:</p>
      <p>Recent Trip:</p>
      <br>
  </div>
  <br>
  <br>
  <br>
  
  <div class="container">
    <div class="row">
      <%- include ("./partials/messages"); %>
      <h3>Your Ratings:</h3>
      <br>
        <div class="panel panel-default">
            <% if(ratings == 0) { %>
              <p> You have not created any ratings </p>
            <% } else { %>
              <table class="table table-striped table-hover ">
                  <thead>
                  <tr>
                      <th>Coffee Shop</th>
                      <th>Overall Rating</th>
                      <th>Atmosphere</th>
                      <th>Coffee Quality</th>
                      <th>Dairy Free Options</th>
                      <th>Favourite Drink</th>
                      <th></th>
                      <th></th>
                  </tr>
                  </thead>
                  <tbody>
                      <% if(ratings) { %>
                          <% ratings.forEach(function(ratings) { %>
                              <tr>
                                  <td><a href="/shops/<%= ratings.coffee_id %>"><%= ratings.coffee_shop %></a></td>
                                  <td><%= ratings.overall %></td>
                                  <td><%= ratings.atmosphere %></td>
                                  <td><%= ratings.coffee_quality %></td>
                                  <td><%= ratings.dairy_free %></td>
                                  <td><%= ratings.favourite_drink %></td>
                                  <td><a href="/ratings/edit/<%=ratings.id%>">Edit</a></td>
                                  <td>
                                    <form action="ratings/<%=ratings.id%>" method="POST" id="delete-form">
                                      <input type="hidden" name="_method" value="DELETE">
                                      <button type="submit" class="btn btn-default">
                                        <i class="fas fa-trash"></i>
                                      </button>
                                    </form>
                                  </td>
                              </tr>
                          <% }); %>
                      <% } %>
                  </tbody>
              </table>
            <% } %>
      </div>
    </div>
  </div>
  
  <a href="ratings/add" class="btn btn-secondary"><i class="fas fa-plus"></i> Add New Rating</a><br>
  
  <div class="form-group">
    <div class="col-lg-10" id="profile-buttons">
      <a href="/logout" class="btn btn-primary" id="dashboard-logout">Logout</a>
      <br>
      <br>
      <p><a href="/home" class="btn btn-default">Back to Home</a></p> 
    </div>
  </div>
</div>  
